<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <%= link_to "TaskTracker", root_path, class: "navbar-brand"%>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link"%>
        </li>
        <% unless Current.user %>
          <li class="nav-item">
            <%= link_to "About", about_path, class: "nav-link"%>
          </li>
        <% end %>
        <% if Current.user %>
          <% if ( Current.user.is_admin? ) %>
            <li class="nav-item">
              <%= link_to "All Users", users_path, class: "nav-link"%>
            </li>
            <li class="nav-item">
              <%= link_to "All Tasks", tasks_path, class:"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Categories", categories_path, class:"nav-link" %>
            </li>
          <% elsif Current.user.is_hr? %>
            <li class="nav-item">
              <%= link_to "Approved Tasks", tasks_approved_path, class:"nav-link" %>
            </li>
          <% end %>
          <li class="nav-item">
            <%= link_to "My Tasks", mytasks_user_path(id: Current.user.id) , class: "nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to "Create New Task", new_task_path , class: "nav-link"%>
          </li>
        <% end %>
      </ul>
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">
        <% if Current.user %>
          <%= render "search/form" %>
          <%= render "shared/display_notification", notifications: @unread_notifications %>
          <li class="nav-item nav-link">
            <%= link_to Current.user.name, user_path(Current.user) %>
          </li>
          <li class="nav-item">
            <%= link_to "Logout", logout_path, method: :delete,  class: "nav-link"%>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign up", sign_up_path,class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Login", sign_in_path,class: "nav-link"%>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
