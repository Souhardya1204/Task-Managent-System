<div class="col-lg-6 mx-auto table-responsive">
  <table class="table table-striped">
    <h2 class="text-center">All Users</h2>
    <thead class="table-primary">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user_path(user) %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><%= link_to "Edit",edit_user_path(id: user.id), class: "btn btn-primary", role: "button" %>
            <%= link_to "Delete",user_path(id: user.id), method: :delete, data: { confirm: "Are you sure?" },  class: "btn btn-danger", role: "button" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @users, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, previous_label: "Previous", 
  next_label: "Next" ,inner_window: 1, outer_window: 0 %>
  <%= link_to "Back", :back, class: "btn btn-outline-secondary" %>
</div>
