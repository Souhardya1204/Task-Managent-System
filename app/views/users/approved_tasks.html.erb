<div class="col-lg-6 mx-auto table-responsive">
  <table class="table all-task ">
    <thead class="table-primary">
      <tr>
        <th>Task Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% Array(@approved_tasks).each do |task| %>
        <tr>
          <td><%= link_to task.name, tasks_approved_show_path(id: task.id) %></td>
          <td>
            <%= link_to "Show",tasks_approved_show_path(id: task.id), class:"btn btn-secondary"%>
            <%= link_to "Print Pdf", tasks_approved_show_path(id: task.id, format: "pdf"), target: "_blank", class:"btn btn-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @approved_tasks, renderer: WillPaginate::ActionView::BootstrapLinkRenderer , previous_label: "Newer", 
next_label: "Older",inner_window: 1, outer_window: 0 %>
  <%= link_to "Back", :back, class: "btn btn-outline-secondary" %>
</div>
