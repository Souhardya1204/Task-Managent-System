<tr>
  <td><%= task.name %></td>
  <td><%= category_name(task) %></td>
  <td><%= task.priority.humanize %></td>
  <td><%= task.date %></td>
  <td><%= User.find(task.employee_id).name %></td>
  <td><%= task.repeat.humanize if task.repeat %></td>
  <td class="compl-status table-info"><%= task.status.humanize %></td>
  <td class="accep-status table-info"><%= task.acceptance %></td>
  <td><%= link_to "Edit",edit_task_path(id: task.id), class: "btn btn-primary", role: "button" %>
    <%= link_to "Show",task_path(id: task.id), class: "btn btn-secondary", role: "button" %></td>
</tr>
