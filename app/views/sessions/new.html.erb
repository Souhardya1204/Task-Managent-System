<div class="row">
  <div class="col-lg-6 mx-auto mt-5">
    <h1>Sign in</h1>
    <%= form_with  url: sign_in_path do |f|%>
      <div class="mb-3 required">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", placeholder: "steve@apple.com", required: true %>
      </div>
      <div class="mb-3 required">
        <%= f.label :password %>
        <%= f.password_field :password , class: "form-control", placeholder: "password", required: true %>
      </div>
      <div class="mb-3">
        <%= f.submit "Sign in", class: "btn btn-primary" %>
      </div>
      <div class="mb-3">
        <%= link_to "Sign in In with Google", "/auth/google_oauth2", class:"login-btn login-google", style:"text-decoration: none" %>
      </div>
      <div class="mb-3">
        <%= link_to "/auth/facebook" , class:"login-btn login-facebook" do %>
          <%= image_tag "facebook.png", style:"height:30px; padding-right: 10px; padding-left:0px;"%>Sign in with Facebook
        <% end %>
      </div>
    <% end %>
  </div>
</div>
